<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>6</zorder>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>screensaver-black.png</texture>
			<animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
		</control>
		<control type="group">
			<control type="group">
				<description>image 1</description>
				<animation type="Conditional" condition="String.IsEqual(Window.Property(SlideView.Fade1),1)">
					<effect type="fade" start="100" end="0" time="4000"/>
				</animation>
				<animation type="Conditional" condition="String.IsEqual(Window.Property(SlideView.NoEffectFade1),1)">
					<effect type="fade" start="100" end="0" time="0"/>
				</animation>
				<control type="image" id="1">
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>1080</height>
					<texture></texture>
					<aspectratio>keep</aspectratio>
					<fadetime>0</fadetime>
				</control>
			</control>
			<control type="group">
				<description>image 2</description>
				<animation type="Conditional" condition="String.IsEqual(Window.Property(SlideView.Fade2),1)">
					<effect type="fade" start="100" end="0" time="4000"/>
				</animation>
				<animation type="Conditional" condition="String.IsEqual(Window.Property(SlideView.NoEffectFade2),1)">
					<effect type="fade" start="100" end="0" time="0"/>
				</animation>
				<control type="image" id="2">
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>1080</height>
					<texture></texture>
					<aspectratio>keep</aspectratio>
					<fadetime>0</fadetime>
				</control>
			</control>
		</control>
	</controls>
</window>
